.product-carousel
  position: relative

  @media $sm-up
    padding: 0 60px

  .slick
    &-list
      overflow: hidden

    &-arrow
      position: absolute
      top: 50%;
      transform: translateY(-50%);
      z-index: 1

    &-next
      right: 20px

    &-prev
      left: 20px

  .slick-track
    display: flex
    justify-content: center
    align-items: center

  &__item
    text-align: center
    min-height: 0
    min-width: 0

  &__image
    max-height: 100%
    max-height: 300px
    max-width: 100%
    padding: 0 30px

  .slide-arrow
    border: none
    margin: 0
    padding: 0
    width: auto
    overflow: visible
    background: transparent
    color: inherit
    font: inherit
    line-height: normal
    width: 15px
    height: 28px
    background-repeat: no-repeat
    font: 0/0 a
    cursor: pointer
    opacity: 0.6
    background-size: contain

    @media $sm-up
      width: 30px
      height: 55px

    &:hover, &:focus
      opacity: 1

  .slide-arrow__next
    background-image: image-url('carousel/arrow-right-dark.png')

  .slide-arrow__prev
    background-image: image-url('carousel/arrow-left-dark.png')
