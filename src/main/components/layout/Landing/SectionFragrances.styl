.fragrance
  background: $color-grey-bg
  padding: 80px 0

  .container
    padding-left: 0
    padding-right: 0

    @media $sm-up
      padding-left: 15px
      padding-right: 15px
      
    @media $xs-only
      padding-left: 5px
      padding-right: 5px

  &__info
    text-align: center
    max-width: 600px
    margin: 0 auto 70px
    padding: 0 60px

    @media $sm-up
      max-width: initial

  &__action
    text-align: center
    margin-top: 50px
