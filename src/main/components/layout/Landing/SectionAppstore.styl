.appstore
  .container
    padding: 80px 0

  // .appstore__layout
  &__layout
    display: table
    width: 100%
    padding: 20px 40px

    @media $sm-up
      padding: 20px 0


  // .appstore__column
  &__column
    display: block
    text-align: center

    @media $sm-up
      display: table-cell
      width: 50%
      vertical-align: middle

      // .appstore__column--left
      &--left
        text-align: right
        padding-right: 80px

      &--right
        text-align: left

  // .appstore__info
  &__info
    display: inline-block
    max-width: 350px

  // .appstore__action
  &__action
    padding: 60px 0 0 0

    @media $sm-up
      padding: 30px 0

    // .appstore__action-button
    &-button
      display: block
      margin: 0 auto 20px
      max-width: 180px

      @media $sm-up
        display: inline-block
        margin: 0
        max-width: 140px

        & + &
          margin-left: 10px

      img
        max-width: 100%

  // .appstore__image
  &__image
    display: none

    @media $sm-up
      display: inline-block
      max-width: 100%
      height: auto