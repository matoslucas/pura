/*------------------------------------*\
    BUTTONS
\*------------------------------------*/

btn(background, color)
	display inline-block
	border-radius $radius-default
	height 46px
	line-height 42px
	padding 0px 22px
	font-weight 500
	user-select none
	border 2px solid transparent
	transition all 200ms ease
	background-color background
	color color
	box-shadow 0px 0px 10px rgba(lighten(background, 50%),.8)

	&:focus
		outline none
	
	&:hover
		background-color darken(background, 20%)
		box-shadow 0px 0px 15px rgba(lighten(background, 50%),.8)

.btn

	/*
	 * BTN SUCCESS
	 */
	&--success
		btn($color-success, $color-white)
	
	/*
	 * BTN INFO
	 */
	&--info
		btn($color-info, $color-white)
	
	/*
	 * BTN ERROR
	 */
	&--error
		btn($color-error, $color-white)
