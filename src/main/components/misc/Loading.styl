.pura-loading
  position: absolute
  display: flex
  justify-content: center
  align-items: center

  z-index: 1000
  top: 0
  bottom: 0
  left: 0
  right: 0
  background: white
  color: $brand-primary

  // .pura-loading__center
  &__center
    flex: 0 0 auto
    text-align: center

  // .pura-loading__logo
  &__logo
    display: block
    margin-bottom: 20px

    .inlineVector__svg {
      width: auto
      height: 100px
      overflow: visible
    }

    .pura-logo__letter {
      animation-duration: 3s
      animation-fill-mode: both
      animation-iteration-count: infinite
      animation-name: loadingBounce
      transform-origin: center center
    }

    .pura-logo__letter {
      &:nth-child(1) {
        animation-delay: 0s
      }
      &:nth-child(2) {
        animation-delay: 0.3s
      }
      &:nth-child(3) {
        animation-delay: 0.6s
      }
      &:nth-child(4) {
        animation-delay: 0.9s
      }
    }

    @keyframes loadingBounce {
      0%, 100% {
        opacity: 0
        transform: scale3d(0, 0, 0)
      }

      7% {
        opacity: 1
        transform: scale3d(1.1, 1.1, 1.1)
      }

      14% {
        opacity: 1
      }

      80% {
        opacity: 0
      }

      20%, 90% {
        transform: scale3d(1, 1, 1)
      }
    }
