.hero
  background-image: image-url('home-hero/bg-mobile.jpg')
  background-size: cover
  background-position: 50%
  overflow hidden
  position relative
  -webkit-transform: translate3d(0, 0, 0)

  @media $sm-up
    background-image: image-url('home-hero/bg-desktop.jpg')
    background-attachment: fixed

  &__header
    position absolute
    top: 0
    left: 0
    right: 0

  &__container
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    text-align: center
    min-height 100vh
    padding: 80px 20px 20px
    position relative
    -webkit-transform: translate3d(0, 0, 0)

    @media $nav-breakpoint
      padding-top: 120px
      clip: rect(0px,100vw, 100vh,0px);

    @media $sm-up
      text-align: left
      align-items: flex-start
      padding-left: 320px !important
      clip: rect(0px,100vw, 100vh,0px);

    @media $md-up
      padding-left: 420px !important
      clip: rect(0px,100vw, 100vh,0px);

    @media $lg-up
      padding-left: 580px !important
      clip: rect(0px,100vw, 100vh,0px);
  
  &__video
    position: fixed
    
    @media $xs-only
      visibility: hidden

    @media $sm-up
      /*clip: rect(0px,100vw, 100vh,0px);*/
      margin-left -484px
      visibility: hidden

    @media $md-up
      /*clip: rect(0px,100vw, 100vh,0px);*/
      margin-left -340px
      visibility: hidden

    @media $lg-up
      /*clip: rect(0px,100vw, 100vh,0px);*/
      margin-left: -201px
      margin-top: -160px
      visibility: hidden


    @media (min-width: 1385px)
      /*clip: rect(0px,100vw, 100vh,0px);*/
      margin-left 0px
      margin-top: 0px;
      visibility: hidden
  

  &__welcome
    color: #fff
    font-size: 36px
    font-weight: 700
    line-height: 1.25em
    text-shadow: 0 1px 15px rgba(0, 0, 0, 0.15)
    margin-top: 0

    @media $xs-only
      font-size: 20px
      text-align left

    @media $sm-up
      font-weight: 700
      font-size: 50px

    @media $md-up
      font-size: 66px

  &__shim
    flex: 1

    @media $sm-up
      display: none
    @media $xs-only
      margin: 10px;
      height: 214px;

  &__text
    color: #5F5F5F
    font-weight bold
    margin-bottom: 40px
    line-height: 1.6em

    @media $xs-only
      font-size: 14px
      margin: 20px;
    @media $md-up
      font-size: 18px

    p
      margin: 0

  &__tex1
    /*font-size: 18px*/
  
  &__tex2
    @media $xs-only
      font-size: 12px
    @media $md-up
      font-size: 14px

  &__actions
    margin-bottom: 10px

    @media $sm-up
      transform: translateX(-10px)

  &__more
    text-align: center
    position absolute
    bottom: 20px
    left: 0
    right: 0
    cursor pointer
    display: none

    @media $sm-up
      display: block

    p
      margin: 0 0 5px
