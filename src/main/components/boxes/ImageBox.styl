.image-box
  margin: 15px auto 40px;
  max-width: 650px
  display: flex
  flex-direction: column
  align-items: center
  cursor: pointer
  padding: 20px

  @media $sm-up
    flex-direction: row

  &.image-box--drag-active
    outline: 2px dashed #F0F0F0

.image-box__avatar
  margin-bottom: 20px
  line-height: 0

  @media $sm-up
    margin-right: 40px
    margin-bottom: 0

.image-box__avatar--cropped
  border: 1px solid #CCC
  border-radius: 100%
  overflow hidden

  img
    object-fit: cover
    width: 160px
    height: 160px

.image-box__secondary

  button
    border: none
    margin: 0
    padding: 0
    width: auto
    overflow: visible
    background: transparent
    color: inherit
    font: inherit
    line-height: normal
    color: #2a93db
