.footer__navigation
  // .footer__navigation-header
  &-header
    text-transform: uppercase
    color: white
    font-size: 1.1em
    margin: 0 0 15px 0

  // footer__navigation-list
  &-list
    list-style: none
    margin: 0
    padding: 0

  // .footer__navigation-item
  &-item
    padding: 0
    margin: 0
    font-size: 0.9em

    // .footer__navigation-item-link
    &-link
      display: block
      color: #CCCCCC
      text-decoration: none
      padding: 7px 0

      &:hover
        color: white
