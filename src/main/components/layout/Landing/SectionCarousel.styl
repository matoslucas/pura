.carousel
  background: $color-grey-bg

  @media (min-width:1280px)
    min-height: 100vh

  // .carousel__container
  &__container
    overflow: hidden
    position: relative

    @media (min-width:1280px)
      height: 100%

  // SLICK CAROUSEL STYLING
  .slick
    // .slick-arrow
    &-arrow
      position: absolute
      top: 50%
      margin-top: -30px
      z-index: 1
      display: none !important

      @media $sm-up
        display: block !important

    &-prev
      left: 60px

    &-next
      right: 60px

    // .slick-dots
    &-dots
      position: absolute
      bottom: 40px
      width: 100%
      margin: 0
      padding: 0
      list-style: none
      line-height: 0
      text-align: center

      li
        display: inline-block
        width: 8px
        height: 8px
        line-height: 9px
        background: transparent
        border: 1px solid #fff
        border-radius: 100%
        margin: 0 12px
        cursor: pointer
        overflow: hidden
        box-shadow: 0 0 1px rgba(0, 0, 0, 0.6)

        button
          display: block
          font-size: 0
          background: 0
          border: 0
          outline: none

        &:hover, &:focus
          background: darken(white, 10%)

        &.slick-active
          background: rgba(0, 0, 0, 0.2)

  // .carousel__item
  &__item
    display: inline-block

  // .carousel__image
  &__image
    display: block
    width: 100%
    height: auto


  @media (min-width:320px) and (max-width:767px)
    .slick
      &-dots
        li
          display: inline-block
          width: 4px
          height: 4px;


  @media (min-width:768px) and (max-width:959px)
